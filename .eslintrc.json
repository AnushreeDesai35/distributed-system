{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  
  "rules": {
      "semi": 2,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "global-require": 0,
      "no-case-declarations": 0,
      "no-underscore-dangle": 0,
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "no-bitwise": 0,
      "no-plusplus": 0,
      "no-console": 0,
      "no-alert": 0,
      "max-len": [2, 120],
      "indent": ["warn", 4, {"SwitchCase": 1}],
      "spaced-comment": ["warn"],
      "no-shadow": 0
  }
}